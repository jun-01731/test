<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<constant name="struts.devMode" value="true"/>
<package name="com.internousdev.ecsite.action" extends="struts-default">

	<!-- 他のページからhomeいくため -->
	<action name="GoHomeAction" class="com.internousdev.ecsite.action.GoHomeAction" method="execute">
	<result name="success">home.jsp</result>
	</action>

	<action name="HomeAction" class="com.internousdev.ecsite.action.HomeAction" method="execute">
	<result name="login">login.jsp</result>
	<result name="success">buyItem.jsp</result>
	</action>

	<action name="LoginAction" class="com.internousdev.ecsite.action.LoginAction" method="execute">
	<result name="success">buyItem.jsp</result>
	<result name="error">login.jsp</result>
	<result name="admin">admin.jsp</result>
	</action>

	<action name="UserCreateAction" class="com.internousdev.ecsite.action.UserCreateAction" method="execute">
		<result name="success">userCreate.jsp</result>
		<!--  <result name="back">login.jsp</result> -->
	</action>

	<action name="UserCreateConfirmAction" class="com.internousdev.ecsite.action.UserCreateConfirmAction" method="execute">
		<result name="success">userCreateConfirm.jsp</result>
		<result name="error">userCreate.jsp</result>
	</action>

	<action name="UserCreateCompleteAction" class="com.internousdev.ecsite.action.UserCreateCompleteAction" method="execute">
		<result name="success">userCreateComplete.jsp</result>
	</action>

	<!-- actionの最初ERRORにする！！ -->
	<action name="BuyItemAction" class="com.internousdev.ecsite.action.BuyItemAction" method="execute">
		<result name="success">buyItemConfirm.jsp</result>
		<result name="error">buyItem.jsp</result>
	</action>

	<action name="BuyItemConfirmAction" class="com.internousdev.ecsite.action.BuyItemConfirmAction" method="execute">
		<result name="success">buyItemComplete.jsp</result>

	</action>

	<action name="MyPageAction" class="com.internousdev.ecsite.action.MyPageAction" method="execute">
		<result name="success">myPage.jsp</result>

	</action>

	<action name="LogoutAction" class="com.internousdev.ecsite.action.LogoutAction" method="execute">
		<result name="success">home.jsp</result>
	</action>

	<action name="ProductRegistrationConfirmAction" class="com.internousdev.ecsite.action.ProductRegistrationConfirmAction" method="execute">
		<result name="success">productRegistrationConfirm.jsp</result>
	</action>

	<action name="ProductRegistrationCompleteAction" class="com.internousdev.ecsite.action.ProductRegistrationCompleteAction" method="execute">
		<result name="success">productRegistrationComplete.jsp</result>
		<result name="error">home.jsp</result>
	</action>

	<action name="ProductRegistrationAction" class="com.internousdev.ecsite.action.ProductRegistrationAction" method="execute">
		<result name="success">productRegistration.jsp</result>
	</action>

	<action name="ProductAllAction" class="com.internousdev.ecsite.action.ProductAllAction" method="execute">
		<result name="success">productAll.jsp</result>
	</action>

	<action name="ProductAllDeleteAction" class="com.internousdev.ecsite.action.ProductAllDeleteAction" method="execute">
		<result name="success">productAll.jsp</result>
	</action>

	<action name="GoAdminAction" class="com.internousdev.ecsite.action.GoAdminAction" method="execute">
		<result name="success">admin.jsp</result>
	</action>

	<action name="UserInfoAllAction" class="com.internousdev.ecsite.action.UserInfoAllAction" method="execute">
		<result name="success">userAll.jsp</result>
	</action>

	<action name="UserAddAction" class="com.internousdev.ecsite.action.UserAddAction" method="execute">
		<result name="success">userAdd.jsp</result>
	</action>

	<action name="UserAddConfirmAction" class="com.internousdev.ecsite.action.UserAddConfirmAction" method="execute">
		<result name="success">userAddConfirm.jsp</result>
	</action>

	<action name="UserAddCompleteAction" class= "com.internousdev.ecsite.action.UserAddCompleteAction" method="execute">
		<result name="success">userAddComplete.jsp</result>
	</action>




</package>
</struts>